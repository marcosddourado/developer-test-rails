<%= form_with scope: :webpage, url: webpages_path, local: true do |form| %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  
  <p>
    <%= form.label :author %><br>
    <%= form.text_area :author %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Show', @page %> |
<%= link_to 'Voltar', pages_path %>
